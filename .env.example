# If you want to point your clx home directory to the home dir in the repo
CLX_HOME=home
TESTING=off # This is set to 'on' for testing

# Configure Django
ALLOWED_HOSTS="*"
SECRET_KEY=something-random
DEBUG=off # Turn 'on' for debug mode

# Configure Postgres
POSTGRES_DB=clx
POSTGRES_USER=postgres
POSTGRES_PASSWORD=...
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Configure CourtListener
CL_TOKEN=...

# Configure HuggingFace
HF_TOKEN=...

# Configure RunPod (for remote inference and finetuning)
RUNPOD_API_KEY=...
RUNPOD_INFERENCE_ENDPOINT_ID=...
RUNPOD_FINETUNE_ENDPOINT_ID=...

# Configure S3 (for remote training data transfer)
CLX_S3_BUCKET=...
CLX_S3_ACCESS_KEY_ID=...
CLX_S3_SECRET_ACCESS_KEY=...
CLX_S3_REGION=us-east-1
# CLX_S3_ENDPOINT_URL=...  # Optional, for S3-compatible services

# Configure LLM providers
# AWS Bedrock
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_SESSION_TOKEN=...
# Google Gemini
GEMINI_API_KEY=...
# OpenAI
OPENAI_API_KEY=...
# Anthropic
ANTHROPIC_API_KEY=...
