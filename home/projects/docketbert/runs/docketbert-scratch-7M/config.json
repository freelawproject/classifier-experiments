{
    "task": "mlm",
    "run_name": "docketbert-scratch-7M",
    "run_dir_parent": "/workspace/clx/home/runs",
    "base_model_name": "answerdotai/ModernBERT-base",
    "tokenizer_name": "answerdotai/ModernBERT-base",
    "tokenize_args": {
